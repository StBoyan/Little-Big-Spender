<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_addItem"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="?attr/android:colorPrimary"
    android:minHeight="?attr/android:actionBarSize"
    android:theme="?attr/android:actionBarTheme">

    <android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingEnd="16dp"
        tools:ignore="RtlSymmetry">

        <ImageButton
            android:background="?attr/android:actionBarItemBackground"
            android:id="@+id/button_addItem_cancel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cancel"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:background="?attr/android:actionBarItemBackground"
            android:id="@+id/button_addItem_add"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_confirm"
            tools:ignore="ContentDescription" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.Toolbar>